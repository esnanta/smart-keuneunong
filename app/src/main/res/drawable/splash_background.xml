<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (use existing launcher background color/drawable) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Centered icon using the vector drawable ic_icon.xml -->
    <item android:gravity="center" android:drawable="@drawable/ic_icon" />

</layer-list>
